<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>About</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="/assets/images/favicon.ico" />

    <link href="/plugins/dropify/dropify.min.css" rel="stylesheet" type="text/css" />

    <!-- App css -->
    <link
      href="/assets/css/bootstrap.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/theme.min.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <!-- Begin page -->
    <div id="layout-wrapper">
      <%- include('adminHeaderLayout', {header}) %>
      <!-- ============================================================== -->
      <!-- Start right Content here -->
      <!-- ============================================================== -->
      <div class="main-content">
        <div class="page-content">
          <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
              <div class="col-12">
                <div
                  class="page-title-box d-flex align-items-center justify-content-between"
                >
                  <h4 class="mb-0 font-size-18">
                    <%= header.navbar.aboutNav %>
                  </h4>

                  <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                      <li class="breadcrumb-item">
                        <a href="javascript: void(0);">Pages</a>
                      </li>
                      <li class="breadcrumb-item active">
                        <%= header.navbar.aboutNav %>
                      </li>
                    </ol>
                  </div>
                </div>
              </div>
            </div>
            <!-- end page title -->
          </div>
          <!-- container-fluid -->
          <div class="container-fluid">
            <div class="row">
              <div class="col-xl-12">
                <div class="card">
                  <% if (action !== "undefined" && action === "success") { %>
                  <div
                    class="alert alert-success alert-dismissible fade show mb-0"
                    role="alert"
                  >
                    <%= header.lang === "fr" ? `Mise à jour réussie` :
                    'Successfully updated' %>
                    <button
                      type="button"
                      class="close"
                      data-dismiss="alert"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <% } %>
                  <% if (action !== "undefined" && action === "error") { %>
                    <div
                      class="alert alert-danger alert-dismissible fade show mb-0"
                      role="alert"
                    >
                      <%= header.lang === "fr" ? `Erreur inattendue, réessayez plus tard!` :
                      `Unexpected error, try again later!` %>
                      <button
                        type="button"
                        class="close"
                        data-dismiss="alert"
                        aria-label="Close"
                      >
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <% } %>
                  <div class="card-body">
                    <form
                      action="/admin/about"
                      method="POST"
                      enctype="multipart/form-data"
                    >
                      <div class="form-group">
                        <label for="simpleinput">Page Title</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update page title"
                          name="pageTitle"
                          value="<%= about.pageTitle %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="simpleinput">Text above the picture</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update Text above the picture"
                          name="titleH1Text"
                          value="<%= about.titleH1Text %>"
                        />
                      </div>
                      <div class="form-group">
                        <h4 class="card-title">Image at the bottom of the text</h4>
                        <input type="file" class="dropify" data-default-file="<%= about.titleImg %>"  name="titleImg" accept="image/*"/>
                      </div>
                      <div class="form-group">
                        <label for="simpleinput">Title of content</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update Title of content"
                          name="titleH2Text"
                          value="<%= about.titleH2Text %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="simpleinput">Paragraph of content</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update Paragraph of content"
                          name="pText1"
                          value="<%= about.pText1 %>"
                        />
                      </div>
                      <div class="form-group">
                        <h4 class="card-title">First icon</h4>
                        <input type="file" class="dropify" data-default-file="<%= about.img1 %>"  name="img1" accept="image/*"/>
                      </div>
                      <div class="form-group">
                        <label for="simpleinput">Caption of the first icon</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update Caption of the first icon"
                          name="imgText1"
                          value="<%= about.imgText1 %>"
                        />
                      </div>
                      <div class="form-group">
                        <h4 class="card-title">Second icon</h4>
                        <input type="file" class="dropify" data-default-file="<%= about.img2 %>"  name="img2" accept="image/*"/>
                      </div>
                      <div class="form-group">
                        <label for="simpleinput">Caption of the second icon</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update Caption of the second icon"
                          name="imgText2"
                          value="<%= about.imgText2 %>"
                        />
                      </div>
                      <div class="form-group">
                        <h4 class="card-title">Third icon</h4>
                        <input type="file" class="dropify" data-default-file="<%= about.img3 %>"  name="img3" accept="image/*"/>
                      </div>
                      <div class="form-group">
                        <label for="simpleinput">Caption of the third icon</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update Caption of the third icon"
                          name="imgText3"
                          value="<%= about.imgText3 %>"
                        />
                      </div>
                      <div class="form-group">
                        <h4 class="card-title">Fourth icon</h4>
                        <input type="file" class="dropify" data-default-file="<%= about.img4 %>"  name="img4" accept="image/*"/>
                      </div>
                      <div class="form-group">
                        <label for="simpleinput">Caption of the fourth icon</label>
                        <input
                          type="text"
                          id="simpleinput"
                          class="form-control"
                          placeholder="Update Caption of the fourth icon"
                          name="imgText4"
                          value="<%= about.imgText4 %>"
                        />
                      </div>
                      <button
                        type="submit"
                        class="btn btn-outline-info btn-lg btn-block waves-effect waves-light"
                      >
                        Update
                      </button>
                    </form>
                  </div>
                  <!-- end card-body-->
                </div>
                <!-- end card -->
              </div>
              <!-- end col -->
            </div>
            <!-- end row-->
          </div>
        </div>
        <!-- End Page-content -->

        <footer class="footer">
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-6">HSCG</div>
            </div>
          </div>
        </footer>
      </div>
      <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <!-- Overlay-->
    <div class="menu-overlay"></div>

    <!-- jQuery  -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/metismenu.min.js"></script>
    <script src="/assets/js/waves.js"></script>
    <script src="/assets/js/simplebar.min.js"></script>
    <script src="/plugins/dropify/dropify.min.js"></script>
    <script src="/pages/fileuploads-demo.js"></script>

    <!-- App js -->
    <script src="/assets/js/theme.js"></script>
    <script src="/js/cookie.js"></script>
  </body>
</html>
